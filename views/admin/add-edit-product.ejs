<%- include ('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="<% if(editing) { 
            %> /admin/edit-product/ <% } else {
            %> /admin/add-product <%
            } %>" method="POST">
            <div class="form-control">
                <label for="name">Name</label>
                <input type="text" name="name" id="name"
                    value="<% if(editing) { 
                        %> <%=product.name%> <% } %>"
                />
            </div>
            <div class="form-control">
                <label for="url">Image url</label>
                <input type="text" name="url" id="url"   value="<% if(editing) { 
                    %> <%=product.url%> <% } %>"/>
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea  name="description" id="description" rows="5"><% if(editing) { 
                    %> <%=product.description%> <% } %></textarea>
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<% if(editing) { 
                    %><%=product.price%><% } %>"/>
            </div>
            <% if(editing) { 
                %>
                <input type="hidden" id="id" name="id" value="<%=product.id%>"/>
                <%
            } %> 
            <button class="btn" type="submit"><% if(editing) { 
                %> Update product <% } else {
                %> Add product <%
                } %> </button>

        </form>
    </main>

<%- include('../includes/end.ejs') %>

